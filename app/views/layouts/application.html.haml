!!! 5
-# http://paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither
- html_tag :class => "no-js", :lang => "en" do
	= render "head"
	
	%body{ :class => "#{ controller.controller_name }_#{ controller.action_name }" }
		#container
			%header
				#header
					.content.clearfix
						= render "chromeframe"
						= render "header"
			
			#main{ :role => "main" }
				#main_content
					= render "flashes"
					= yield
			
			%footer
				#footer
					.content.clearfix
						= render "footer"
		
		-# Javascript at the bottom for fast page loading
		= render "javascripts"
		= yield :javascript
