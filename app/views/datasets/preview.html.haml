-content_for :javascript do
	:javascript
		$('#dataset_output').toggle(function() {
		  $(this).select();
		}, function() {
		  $(this).unselect();
		});

#main_datasets_preview.clearfix
	.content
		#main_datasets_preview_content
			%h3 Here Is Your New Dataset...
			- if account_signed_in?
				= form_for @dataset do |f|
					= f.label :format, 'Input Format'
					= f.text_area :format
					= f.label :output, 'Output Data'
					= f.text_area :output, :readonly => true
					= f.label :name, 'Name'
					= f.text_field :name, :size => 30, :placeholder => 'My Dataset'
					/ = label_tag :number_of_entities, '# of Entries'
					= submit_tag 'Save', :class => "button orange right"
			- else
				%label Input Format
				= text_area_tag nil, @dataset.format, :readonly => true, :id => 'dataset_format'
				%label Output Data
				= text_area_tag nil, @dataset.output, :readonly => true, :id => 'dataset_output'
				
				%br
				%br
				
				%p
					To save a dataset,
					= link_to 'log in', new_account_session_path
					or
					= link_to 'sign up', new_account_registration_path
					\. 
			
		.clearfix
